azul = #004667
gris0 = #e6e6e6
gris1 = #b2b2b2
gris2 = #515151
verde0 = #66c6c4
facebook = #4a70af
twitter = #32b4e5
instagram = #d2bdaa
mail = #b3b3b3

.azul
	color azul
.verde0
	color verde0
.mayus
	text-transform uppercase
.italic
	font-style italic
.m-top-20
	margin-top 20px
.btn.btn-primary
	border-radius 0px
	width 100%
	&.azul
		background azul
		color white
body
	background white
.single-featured-image-header
	padding-top 50px
.site-branding
	position fixed
	z-index 100
	width 100%
#page
	overflow hidden
.panel-content
	margin-bottom 30px
.site-branding
	background verde0
	height 50px
	overflow hidden
.logo-container
	background gris0
	display inline-block
	margin -100px 0 0 -20px
	padding 100px 0 100px 20px
	transform rotate(20deg)
	vertical-align middle
	width 50%
#logo
	display inline-block
	max-width 90%
	transform: rotate(-20deg);
.twentyseventeen-panel
	overflow visible
.twentyseventeen-front-page.has-header-image
	.site-branding
		margin 0 !important
		position relative
.site-branding
	padding 0
body:not(.title-tagline-hidden) .site-branding-text
.site-branding-text
	display none
h1.site-title
	color white
	font-size .8em
.nav-button
	display inline-block
	float right
	.navbar-toggle
		height auto
		padding 8px 2px
		width 40px
		span.icon-bar
			background white
			border-radius 0px
			height 3px
			width 100%
.has-header-image.twentyseventeen-front-page
	.custom-header
		background #59c3c1
		display block
		height 50px

.twentyseventeen-front-page
	.custom-header
		background #59c3c1
		display block
		height 50px
		overflow hidden
.navigation-top
	position absolute
	right -50%
	width 50%
	background black
.main-banners-container
	margin-top -10px
	position relative
	z-index 10
	.item
		position relative
		color white
.banner-info-container
	position absolute
	top 25%
	left 10%
	text-shadow 0px 0px 7px gris2
	.banner-title
		font-size 2.2em
	.banner-description
		font-size 1.4em
.block-title
	color white
	border-bottom 1px solid gris1
	span
		background azul
		padding 5px 10px
		display inline-block
.home-next-events
	.events-container
		margin-top 20px
		display flex
		justify-content space-around
		.item
			text-align center
			width 30%
			.calendar
				width 80%
				margin 0 auto
				.month
					background azul
					color white
					font-size 1.4em
					padding 5px 0
					border-radius 4px 4px 0 0
				.day
					background gris0
					color azul
					font-size 4em
					padding 10px 0
					border-radius  0 0 4px 4px
			.description
				color verde0
				margin-top 10px
.allies-container
	display flex
	flex-wrap wrap
	justify-content space-around
	.item-allie
		margin-top 20px
		width 28%
.single-featured-image-header
	border none
.icon-bulls-eye
.icon-plane
	margin-right 5px
.entry-header
	text-align center
body.page:not(.twentyseventeen-front-page)
	.entry-title
		font-size 1.8em
		margin -90px 0 50px 0
		color white
		text-shadow 0px 0px 5px gris2
img.about
	max-width 60%
#miembros-fundadores
	.entry-title
		margin-top -50px
		margin-bottom 10px
.members-container
	.member-item
		margin-bottom 40px
		.title
			text-align center
		.photo
			text-align center
			.member-photo-container
				background gris0
				border-radius 50%
				width 180px
				height 180px
				display inline-block
				overflow hidden
			.position
				margin-bottom 10px
			.review-link
				background azul
				color white
				border none
				border-radius 0px
				&:hover
					background rgba(azul, .8)
		.info
			background gris0
#contacto
	.entry-title
		margin-bottom 34px
#map
	display block
	height 300px
	margin-bottom 30px
	width 100%
input[type="text"]
.form-control
	border-radius 0px
	background gris0
	border none
	resize none
.site-footer
	background gris0
	text-align center
	.col-left
	.col-center
	.col-right
		margin-bottom 20px
	.hashtag
		font-size 2.2em
		color verde0
		font-style italic
		span
			color azul
	.logo
		width 200px
		height auto
		display inline-block
	.social
		padding 0
		li
			display inline-block
			font-size 3em
			margin 0 5px
			.icon-facebook
				color facebook
			.icon-twitter
				color twitter
			.icon-instagram
				color instagram
			.icon-mail
				color mail
@media screen and (min-width: 380px)
	.logo-container
		width 200px
	#logo
		max-width 150px
@media screen and (min-width: 480px)
	.banner-info-container
		position absolute
		top 30%
		left 15%
		.banner-title
			font-size 2.8em
		.banner-description
			font-size 1.6em
	body.page:not(.twentyseventeen-front-page)
		.entry-title
			font-size 2.4em
			margin -130px 0 70px 0
	#miembros-fundadores
		.entry-title
			margin-top -70px
@media screen and (min-width: 650px)
	#miembros-fundadores
		.entry-title
			margin-top -80px
@media screen and (min-width: 768px)
	.navigation-top.site-navigation-fixed
		display none
	.custom-header
		margin-bottom -2px !important
	.navbar-toggle
		display inline-block
	.banner-info-container
		top 30%
		left 15%
		.banner-title
			font-size 4em
		.banner-description
			font-size 2.4em
	.home-next-events
	.home-allies
		.wrap
			padding-top 20px
		&.panel-content
			margin-bottom 10px
	.home-next-events
		.events-container
			.item
				.calendar
					width 60%
				.description
					font-size 1.3em
	.block-title
		font-size 1.4em
	body.page-two-column:not(.archive)
		#primary
			.entry-header
			.entry-content
				width 100%
				float none
	img.about
		max-width 45%
	.site-footer
		.hashtag
			font-size 3em
		.logo
			width 260px
		.social
			li
				font-size 4em